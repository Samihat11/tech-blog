<section
  class='m-4 bg-yellow-200 p-2 ring-8 ring-yellow-400 text-lg md:text-xl lg:text-3xl'
>
  <div
    class='flex justify-between bg-yellow-400 text-red-700 ring-8 ring-yellow-400 align-middle mb-4'
  >
    <h2 class='text-lg md:text-xl lg:text-2xl'>
      {{post.title}}</h2>
    <p class='text-xs self-end md:text-sm font-sans'><span
        class='text-black'
      >posted by</span>
      {{post.user.name}}
      <span class='text-black'>on</span>
      {{format_date post.updatedAt}}</p>
  </div>
  <div>
    <p class='text-lg'>
      {{post.post_content}}
    </p>
  </div>
</section>

{{#if post.comments}}
  <h2 class='ml-4 text-yellow-700'>Comments</h2>
  {{#each post.comments as |comment|}}
    <section
      class='m-4 bg-yellow-200 p-2 ring-8 ring-yellow-400 text-lg md:text-xl lg:text-3xl'
    >
      <div
        class='flex justify-between bg-yellow-400 text-red-700 ring-8 ring-yellow-400 align-middle mb-4'
      >
        <h3 class='text-sm md:text-base'>{{comment.user.name}}
          <span class='text-black'>wrote on</span>
          {{format_date comment.createdAt}}</h3>
      </div>
      <div>
        <p class='text-sm'>
          {{comment.comment}}
        </p>
      </div>
    </section>
  {{/each}}
{{/if}}

<section class='flex flex-col'>
  <h3 class='ml-4 mb-2 text-yellow-700'>Add Comment</h3>
  <form
    class='flex m-auto flex-col shadow-lg p-4 bg-yellow-200 ring-2 ring-yellow-600 w-11/12'
    id='comment-form'
  >
    <textarea id='comment' class='mb-2 w-full cursor-text' required></textarea>
    <button
      type='submit'
      class='self-center bg-yellow-500 hover:bg-yellow-700 p-2 hover:text-white rounded-lg'
    >Submit</button>
  </form>
</section>
<script src='/js/comments.js'></script>